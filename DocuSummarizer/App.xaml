<Application
    x:Class="DocuSummarizer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:DocuSummarizer.Converters"
    xmlns:local="clr-namespace:DocuSummarizer"
    StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <converter:BoolToBrushConverter x:Key="BoolToBrushConverter" />
            <converter:BoolToTextBrushConverter x:Key="BoolToTextBrushConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Colors.Light.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
